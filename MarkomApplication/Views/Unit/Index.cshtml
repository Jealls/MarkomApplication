@model IEnumerable<MarkomApplication.ViewModel.UnitViewModel>


<tr>
    <th>
        @Html.DisplayNameFor(model => model.code)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.name)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.createBy)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.createDate)
    </th>
    <th>Action</th>
</tr>
@if (Model != null)
{

    if (Model.Count() == 0)
    {
        <tr>
            <td colspan="5" style="text-align:center;" class="bg-light">Data tidak ditemukan</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @DateTime.Parse(item.createDate.ToString()).ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.createBy)
                </td>
                <td>
                    <button title="Tampilkan" id="btn_view_unit" class=" btn" data-id="@item.id" style="margin:2px; padding:2px;" data-url="@Url.Action("ViewUnit", "Unit")">
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </button>
                    <button title="Ubah" id="btn_edit_unit" class="btn " data-id="@item.id" style="margin:2px; padding:2px;" data-url="@Url.Action("EditUnit", "Unit")">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </button>
                    <button title="Hapus" id="btn_del_unit" class="btn " data-id="@item.id" style="margin:2px; padding:2px;">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </button>
                </td>
            </tr>
        }

    }
}
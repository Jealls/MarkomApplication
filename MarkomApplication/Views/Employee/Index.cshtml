@model IEnumerable<MarkomApplication.ViewModel.EmployeeViewModel>

<tr>
    <th>No</th>
    <th>
        @Html.DisplayNameFor(model => model.code)
    </th>
    <th>
        Employee Name
    </th>
    <th>
        @Html.DisplayNameFor(model => model.companyName)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.createBy)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.createDate)
    </th>
    <th>Action</th>
</tr>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.id)</td>
            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
                <span> </span>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.companyName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.createBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createDate)
            </td>
            <td>
                <button title="Tampilkan" id="btn_view_employee" class=" btn" data-id="@item.id" style="margin:2px; padding:2px;" data-url="@Url.Action("ViewEmployee", "Employee")">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
                <button title="Ubah" id="btn_edit_employee" class="btn " data-id="@item.id" style="margin:2px; padding:2px;" data-url="@Url.Action("ViewEmployee", "Employee")">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </button>
                <button title="Hapus" id="btn_del_employee" class="btn " data-id="@item.id" style="margin:2px; padding:2px;">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                </button>
            </td>
        </tr>
    }
}


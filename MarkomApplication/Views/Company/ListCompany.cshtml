@Styles.Render("~/Content/dropdown-autocomplete")

@model IEnumerable<MarkomApplication.ViewModel.CompanyViewModel>

@{
    ViewBag.Title = "ListCompany";
}

<div class="container rounded-top border border-primary">

    <div class="row rounded-top list-head ">
        <p>List Company</p>
    </div>
    <div class="row mx-2">
        <p class="p-2 my-3 bg-light text-dark" style="width:100%;">
            <a>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "active" })</a> /
            <a>@Html.ActionLink("Master", "Index", "Home", null, new { @class = "active" })</a> /
            List Company
        </p>
        <div class="py-2" style="width:100%;">

            @*<button type="button" value="Show" id="btn_add_company" class="btn btn-danger m-2" data-url="@Url.Action("AddCompany", "Company")">Add</button>*@
            <a class="btn btn-primary active" id="btn_add_company" role="button" aria-pressed="true" style="float: right;" data-url="@Url.Action("Add", "Company")">Add</a>
        </div>

        <div class="row search_group" style="width:100%">
            <div class="input-group">
                <div class="form-group col-3">
                    <input type="text" id="dropdown_code" name="DropdownCode" class="form-control rounded" placeholder="- Select Company Code -">
                    <input type="hidden" id="dropdown_company_id" name="CompanyIdDropdown" />
                </div>
                <div class="form-group col-3">
                    <input type="text" id="dropdown_name" name="DropdownName" class="form-control rounded" placeholder="- Select Company Name -">
                    <input type="hidden" id="dropdown_company_id_name" name="CompanyIdDropdown" />
                </div>
                <div class="form-group col-2" style="max-width:220px;">
                    <div class="has-feedback">
                        <input id="created_date" class="form-control datepicker-here" data-date-format="dd/mm/yyyy" placeholder="Created" />
                        <i class="fa fa-calendar form-control-feedback"></i>
                    </div>
                </div>
                <div class="form-group col-2" style="max-width:220px;">
                    <input id="created_by" type="text" class="form-control rounded" placeholder="Created By" name="created_by" />
                </div>

                <div class="form-group col-1" style="margin-right:0; ">
                    <button class="btn" id="btn_search_company" type="submit" name="btn_search_company" data-url="@Url.Action("Index", "Company")"> &nbsp;Cari</button>
                </div>
            </div>
        </div>
            <table id="tbl_list_company" class="table">

            </table>
    </div>
</div>

@Html.Partial("_ModalPopUp")
@section Scripts{
    @Scripts.Render("~/bundles/validation")
    <script src="~/Scripts/crud/crudCompany.js"></script>
    <script src="~/Scripts/datepicker.js"></script>
    <script src="~/Scripts/datepicker.min.js"></script>
    <script src="~/Scripts/i18n/datepicker.en.js"></script>
}
@Html.Partial("_AlertPopUp")
@Html.Partial("_CompanyConfirmation")
@Styles.Render("~/Content/dropdown-autocomplete")

@model IEnumerable<MarkomApplication.ViewModel.CompanyViewModel>

@{
    ViewBag.Title = "ListCompany";
}

<div class="container rounded-top border border-primary">

    <div class="row rounded-top list-head ">
        <p>List Company</p>
    </div>
    <div class="row mx-2">
        <p class="p-2 my-3 bg-light text-dark" style="width:100%;">
            <a>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "active" })</a> /
            <a>@Html.ActionLink("Master", "Index", "Home", null, new { @class = "active" })</a> /
            List Company
        </p>
        <div class="py-2" style="width:100%;">

            @*<button type="button" value="Show" id="btn_add_company" class="btn btn-danger m-2" data-url="@Url.Action("AddCompany", "Company")">Add</button>*@
            <a class="btn btn-primary active" id="btn_add_company" role="button" aria-pressed="true" style="float: right;" data-url="@Url.Action("Add", "Company")">Add</a>
        </div>

        <div class="row search_group" style="width:100%">
            <div class="input-group">
                <div class="form-group">
                    <input type="text" id="dropdown_code" name="DropdownCode" class="form-control rounded" placeholder="- Select Company Code -">
                    <input type="hidden" id="dropdown_company_id" name="CompanyIdDropdown" />
                </div>
                <div class="form-group">
                    <input type="text" id="dropdown_name" name="DropdownName" class="form-control rounded" placeholder="- Select Company Name -">
                    <input type="hidden" id="dropdown_company_id_name" name="CompanyIdDropdown" />
                </div>
                <div class="form-group" style="max-width:220px;">
                    <div class="has-feedback">
                        <input id="txt_search_dari" class="form-control datepicker-here" data-date-format="dd/mm/yyyy" placeholder="Created" />
                        <i class="fa fa-calendar form-control-feedback"></i>
                    </div>
                </div>
                <div class="form-group" style="max-width:220px;">
                    <input type="text" class="form-control rounded" placeholder="Created By" id="src_created_company" name="src_created_company" />
                </div>

                <div class="form-group" style="margin-right:0; ">
                    <button class="btn" id="btn_search_company" name="btn_search_company"> &nbsp;Cari</button>
                </div>
            </div>
        </div>
        <table class="table">
            <tr>
                <th>No</th>
                <th>
                    @Html.DisplayNameFor(model => model.code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.createBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.createDate)
                </th>
                <th>Action</th>
            </tr>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.id)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.createBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.createDate)
                        </td>
                        <td>
                            <button title="Tampilkan" id="btn_view_company" class=" btn" data-id="@item.id" style="margin:2px; padding:2px;" data-url="@Url.Action("ViewCompany", "Company")">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>
                            <button title="Ubah" id="btn_edit_company" class="btn " data-id="@item.id" style="margin:2px; padding:2px;" data-url="@Url.Action("EditCompany", "Company")">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </button>
                            <button title="Hapus" id="btn_del_company" class="btn " data-id="@item.id" style="margin:2px; padding:2px;">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </button>
                        </td>
                    </tr>
                }
            }

        </table>
    </div>
</div>

@Html.Partial("_ModalPopUp")
@section Scripts{
    @Scripts.Render("~/bundles/validation")
    <script src="~/Scripts/crud/crudCompany.js"></script>
    <script src="~/Scripts/datepicker.js"></script>
    <script src="~/Scripts/datepicker.min.js"></script>
    <script src="~/Scripts/i18n/datepicker.en.js"></script>
}
@Html.Partial("_AlertPopUp")
@Html.Partial("_CompanyConfirmation")
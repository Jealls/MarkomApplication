<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Markom Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @*datepicker style*@
    <link href="~/Content/datepicker.css" rel="stylesheet" />
    <link href="~/Content/datepicker.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Markom Application</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Master
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a> @Html.ActionLink("Company", "ListCompany", "Company", null, new { @class = "dropdown-item" }) </a>
                        <a> @Html.ActionLink("Employee", "ListEmployee", "Employee", null, new { @class = "dropdown-item" }) </a>
                        <a> @Html.ActionLink("Role", "ListRole", "Role", null, new { @class = "dropdown-item" })</a>
                        <a class="dropdown-item" href="#">Menu</a>
                        <a class="dropdown-item" href="#">Menu Access</a>
                        <a class="dropdown-item" href="#">User</a>
                        <a class="dropdown-item" href="#">Unit</a>
                        <a class="dropdown-item" href="#">Souvenir</a>
                        <a class="dropdown-item" href="#">Product</a>
                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Transaction
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">Event</a>
                        <a class="dropdown-item" href="#">Design</a>
                        <a class="dropdown-item" href="#">Promotion</a>
                        <a class="dropdown-item" href="#">Promotion Item</a>
                        <a class="dropdown-item" href="#">Souvenir</a>
                        <a class="dropdown-item" href="#">Souvenir Item</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        <div class="container" style="margin-bottom:20px; margin-top:20px;">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Markom Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/alert")


    @RenderSection("scripts", required: false)
</body>
</html>
